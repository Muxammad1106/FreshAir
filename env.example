# Database Configuration
# Используется внешний PostgreSQL (локальный на сервере)
# Убедитесь, что PostgreSQL принимает подключения от Docker контейнеров
# Проверьте postgresql.conf: listen_addresses = '*' или 'localhost'
# Проверьте pg_hba.conf: добавьте строку для Docker сети
POSTGRES_DB=freshair
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_HOST=172.17.0.1  # IP Docker bridge (для Linux). Для Mac/Windows используйте: host.docker.internal
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# Django Configuration
DEBUG=False
SECRET_KEY=your-secret-key-change-in-production-minimum-50-characters-long
ALLOWED_HOSTS=api.airly.life,localhost,127.0.0.1,backend

# Backend Port (изменен с 8000 на 8001, так как 8000 занят)
BACKEND_PORT=8001

# Frontend Port (изменен с 3000 на 8080, так как 3000 занят)
FRONTEND_PORT=8080

# Frontend Domain (для CORS)
FRONTEND_DOMAIN=https://airly.life

# Frontend API URL (для React приложения)
REACT_APP_HOST_API=https://api.airly.life

# CORS Allowed Origins (разделенные запятыми, если несколько)
CORS_ALLOWED_ORIGINS=https://airly.life,https://www.airly.life

# Celery Configuration (уже настроено через docker-compose)
# CELERY_BROKER_URL=redis://redis:6379/0
# CELERY_RESULT_BACKEND=redis://redis:6379/0

# OpenAI (опционально)
# OPENAI_API_KEY=your-openai-api-key

# Sentry (опционально, для production)
# SENTRY_URL=your-sentry-dsn

